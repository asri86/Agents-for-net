{
  "TokenValidation": {
    "Enabled": false,
    "Audiences": [
      "{{ClientId}}"
    ],
    "TenantId": "{{TenantId}}"
  },

  "AgentApplication": {
    "StartTypingTimer": false,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false,

    "UserAuthorization": {
      "AutoSignin": false,
      "Handlers": {
        "agentic": {
          "Assembly": "Microsoft.Agents.Extensions.A365",
          "Type": "Microsoft.Agents.Extensions.A365.A365Authorization",
          "Settings": {
            "Scopes": [
              "https://canary.graph.microsoft.com/.default"
            ]
          }
        }
      }
    }
  },

  "Connections": {
    "ServiceConnection": {
      "Settings": {
        "AuthType": "ClientSecret",
        "ClientSecret": "",
        "AuthorityEndpoint": "https://login.microsoftonline.com/{{TenantId}}",
        "ClientId": "{{ClientId}}",
        "TenantId": "{{TenantId}}",
        "Scopes": [
          "https://api.botframework.com/.default"
        ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Agents": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}