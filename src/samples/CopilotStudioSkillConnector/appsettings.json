{
  "TokenValidation": {
    "Enabled": true,
    "Audiences": [
      "{{ClientId}}"
    ],
    "TenantId": "{{TenantId}}"
  },

  "AgentApplication": {
    "StartTypingTimer": true,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false,

    "UserAuthorization": {
      "AutoSignIn": false,
      "Handlers": {
        "mcs": {
          "Type": "ConnectorUserAuthorization",
          "Settings": {
            "OBOConnectionName": "ServiceConnection"
          }
        },
        "abs": {
          "Settings": {
            "AzureBotOAuthConnectionName": "oauth",
            "OBOConnectionName": "ServiceConnection",
            "Title": "Sign in for ABS",
            "Text": "Please sign in and send the 6-digit code"
          }
        },
        "me": {
          "Settings": {
            "AzureBotOAuthConnectionName": "not_exchangeable",
            "Title": "Sign in for Me",
            "Text": "Please sign in and send the 6-digit code"
          }
        }
      }
    }
  },

  "CopilotStudioAgent": {
    "EnvironmentId": "",
    "SchemaName": ""
  },

  "Connections": {
    "ServiceConnection": {
      "Settings": {
        "AuthType": "ClientSecret",
        "AuthorityEndpoint": "https://login.microsoftonline.com/{{TenantId}}",
        "ClientId": "{{ClientId}}",
        "ClientSecret": "{{ClientSecret}}",
        "Scopes": [
          "https://api.botframework.com/.default"
        ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
